<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_horizontal_margin"
	tools:context=".FirstActivity">

	<TextView
		android:id="@+id/activity_first_textview"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Hello World!"
		android:textSize="27sp"/>

	<Button
		android:id="@+id/activity_first_button_go_second_activity"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Second activity"
		android:layout_below="@id/activity_first_textview"
		android:textSize="24sp"
		android:onClick="goToSecondActivity"/>

	<Button
		android:id="@+id/activity_first_button_go_to_third_activity"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Third activity"
		android:layout_below="@id/activity_first_button_go_second_activity"
		android:textSize="24sp"
		android:onClick="goToThirdActivity"/>
</RelativeLayout>
